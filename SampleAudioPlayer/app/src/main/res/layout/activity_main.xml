        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="중지"/>

    <Button
        android:id="@+id/button03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일시정지"/>

    <Button
        android:id="@+id/button04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="재시작"/>

</LinearLayout>